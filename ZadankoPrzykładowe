<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <form action="">
        <input type="text" name="pole">
        <button type="submit">Pokaż</button>
    </form>
    <div class="wynik"></div>
    <script>
        //odwołanie do formularza, pobieramy ten formularz
        const formularz = document.querySelector('form');
        //odwolujemy sie do diva
        const w = document.querySelector('.wynik')
        //przypisujemy zdarzenie do form ktore uruchomi funkcje przez przegladarke zdarzenie to submit
        formularz.addEventListener('submit', (e) => {
            //to e zatrzymuje odswiezanie
            e.preventDefault();
            //odolujemy sie do pola w form i pobieramy jego wartosc .value 
            const wartoscform = document.querySelector('input[name="pole"]').value
            //wartosc pola form wyrzucamy do diva
            //w.textContent = wartoscform;
            if(wartoscform % 2 == 0)
            {
                w.textContent = 'liczba jest parzysta';
            }
            else
            {
                w.textContent = 'liczba jest nieparzysta';
            }
        })
    </script>
</body>
</html>
